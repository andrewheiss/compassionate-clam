@article{DupuyRonPrakash:2016,
  title = {Hands {{Off My Regime}}! {{Governments}}’ {{Restrictions}} on {{Foreign Aid}} to {{Non-Governmental Organizations}} in {{Poor}} and {{Middle-Income Countries}}},
  author = {Dupuy, Kendra and Ron, James and Prakash, Aseem},
  date = {2016-08-01},
  journaltitle = {World Development},
