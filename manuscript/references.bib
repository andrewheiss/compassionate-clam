@article{DeMattee:2018,
  title = {Toward a {{Coherent Framework}}: {{A Typology}} and {{Conceptualization}} of {{CSO Regulatory Regimes}}},
  shorttitle = {Toward a {{Coherent Framework}}},
  author = {DeMattee, Anthony J.},
  date = {2018-12-01},
  journaltitle = {Nonprofit Policy Forum},
  volume = {9},
